#include <stdio.h>
#include <stdlib.h>

int pickingNumbers(int n, int a[]) {
    int freq[101] = {0};   // numbers are between 0 and 100

    // Count frequency of each number
    for (int i = 0; i < n; i++) {
        freq[a[i]]++;
    }

    int maxlen = 0;

    // Check consecutive numbers
    for (int i = 1; i <= 100; i++) {
        int len = freq[i] + freq[i - 1];
        if (len > maxlen) {
            maxlen = len;
        }
    }

    return maxlen;
}

int main() {
    int n;
    scanf("%d", &n);

    int *a = (int*)malloc(n * sizeof(int));
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    int result = pickingNumbers(n, a);
    printf("%d\n", result);

    free(a);
    return 0;
}
